@model IEnumerable<Category>
<div class="products">
    <div class="product-listy">
        <h2>Danh mục sản phẩm</h2>
        <ul class="product-list">
            @foreach (var item in Model)
            {
                <li><a href="/product/category/@item.CategoryId">@item.CategoryName</a></li>
            }
        </ul>
    </div>
</div>