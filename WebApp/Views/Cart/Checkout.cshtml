@model Member
@{
    Layout = "_LayoutProduct";
}
<div class="d-flex">
    <hr class="w-25 my-4 mx-auto" />
</div>
<div class="container">
    @if (ViewBag.cart.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Mã màu</th>
                    <th>Size</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <td>Thành tiền</td>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.cart)
                {
                <tr>
                    <td class="ProductId" name="@item.ProductId">@item.ProductName</td>
                    <td class="ColorId" name="@item.ColorId">@item.ColorCode</td>
                    <td class="SizeId" name="@item.SizeId">@item.SizeCode</td>
                    <th>@item.Price</th>
                    <td><input type="number" id="quantityInCart" name="Quantity" value="@item.Quantity" min="1" max="@item.AvailableQuantity" /></td>
                    <th class="Amount">@(item.Quantity * item.Price)</th>
                    <td><a class="DeleteCart"><i class="fas fa-trash-alt"></i></a></td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <script>
            window.location.href = "/product";
        </script>
    }
    <div class="mt-5">
        <h5 class="float-left">Chọn thông tin giao hàng: </h5>
        <div class="float-right">
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addContactModal">Thêm thông tin liên hệ</button>
            <div class="addModal">
                <div class="modal" id="addContactModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Thêm thông tin liên hệ</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <form method="post" name="addContact">
                                <!-- Modal body -->
                                <div class="modal-body">
                                    <div class="row my-1">
                                        <label for="FullName" class="col-4 text-right">Tên đầy đủ: </label>
                                        <input type="text" name="FullName" class="form-control col-7" />
                                    </div>
                                    <div class="row my-1">
                                        <label for="PhoneNumber" class="col-4 text-right">Số điện thoại: </label>
                                        <input type="text" name="PhoneNumber" class="form-control col-7" />
                                    </div>
                                    <div class="row my-1">
                                        <label for="AddressHome" class="col-4 text-right">Số nhà và tên đường: </label>
                                        <textarea name="AddressHome" class="form-control col-7"></textarea>
                                    </div>
                                    <div class="row my-1">
                                        <label for="ProvinceId" class="col-4 text-right">Tỉnh/thành phố: </label>
                                        <select id="ProvinceId" name="ProvinceId" class="form-control col-7">
                                        </select>
                                    </div>
                                    <div class="row my-1">
                                        <label for="DistrictId" class="col-4 text-right">Quận/huyện: </label>
                                        <select id="DistrictId" name="DistrictId" class="form-control col-7">
                                        </select>
                                    </div>
                                    <div class="row my-1">
                                        <label for="WardId" class="col-4 text-right">Xã/phường: </label>
                                        <select id="WardId" name="WardId" class="form-control col-7">
                                        </select>
                                    </div>
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button class="btn btn-primary">Lưu</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    @if (Model.DefaultContact is null)
    {
        <script>
            $(exampleModal).modal('show');
        </script>
    }

    <table class="table table-bordered my-3">
        <thead>
            <tr>
                <th></th>
                <th>Người liên hệ</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Contact item in Model.Contacts)
            {
                <tr>
                    <td><input type="radio" name="Contact" value="@item.ContactId" @(item.ContactId == Model.DefaultContact || Model.Contacts.ToList().Count == 1 ? "checked" : "") /></td>
                    <td>@item.FullName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@(item.AddressHome + ", " + item.WardName + ", " +item.DistrictName + ", " + item.ProvinceName)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex">
        <form method="post" class="mx-auto">
            <input type="hidden" name="ContactId" value="@Model.DefaultContact" />
            <button class="btn btn-primary">Xác nhận đơn hàng</button>
        </form>
    </div>
</div>
<div class="d-flex">
    <hr class="w-25 my-4 mx-auto" />
</div>
