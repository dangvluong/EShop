@model IEnumerable<Cart>
@{
    Layout = "_LayoutProduct";

}
<div class="d-flex">
    <hr class="w-25 my-4 mx-auto" />
</div>
<div class="mb-4">
    <h4 class="text-center">Giỏ hàng</h4>
</div>
<div class="container">
    @if (Model.ToList().Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Mã màu</th>
                    <th>Size</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <td>Thành tiền</td>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ProductId" name="@item.ProductId">@item.ProductName</td>
                        <td class="ColorId" name="@item.ColorId">@item.ColorCode</td>
                        <td class="SizeId" name="@item.SizeId">@item.SizeCode</td>
                        <th>@item.Price</th>
                        <td><input type="number" id="quantityInCart" name="Quantity" value="@item.Quantity" min="1" max="@item.AvailableQuantity" /></td>
                        <th class="Amount">@(item.Quantity * item.Price)</th>
                        <td><a class="DeleteCart"><i class="fas fa-trash-alt"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <a href="/cart/checkout" class="btn btn-primary">Thanh toán</a>
            <a href="/product" class="btn btn-secondary">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="text-center">
            <p>Giỏ hàng đang trống</p>
            <p>Click vào <a href="/product">ĐÂY</a> để tiếp tục mua sắm.</p>
        </div>
    }
</div>
<div class="d-flex">
    <hr class="w-25 my-4 mx-auto" />
</div>