@model ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}
<div class="d-flex">
    <hr class="w-25 my-4 mx-auto" />
</div>
<h4 class="text-center mb-4">Đổi mật khẩu</h4>
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form method="post">
                <div class="form-group">
                    <label>Nhập mật khẩu hiện tại</label>
                    <input type="password" asp-for="OldPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Nhập mật khẩu mới</label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Nhập lại mật khẩu mới</label>
                    <input type="password" asp-for="RePassword" class="form-control" />
                </div>
                <div class="d-flex">
                    <button class="btn btn-primary mx-auto">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>