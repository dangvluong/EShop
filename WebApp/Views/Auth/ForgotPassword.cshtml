@model ForgotPasswordModel
@{
    ViewBag.Title = "Quên mật khẩu";
}
<div class="d-flex">
    <hr class="w-25 mb-4 mx-auto" />
</div>
<div class="container">
    <h4 class="text-center my-4">QUÊN MẬT KHẨU</h4>
    <div class="text-center">
        @TempData["msg"]
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="d-flex">
                    <button class="btn btn-primary mx-auto">Xác thực email</button>
                </div>
            </form>
        </div>
    </div>
</div>