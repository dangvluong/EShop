@model Member
@{ 
    ViewBag.Title = "Đăng nhập";
}
<div class="d-flex">
    <hr class="w-25 mb-4 mx-auto" />
</div>
<div class="text-center" asp-validation-summary="All"></div>
<div class="text-center">
    @TempData["msg"]
</div>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <h4 class="text-center my-4">ĐĂNG NHẬP</h4>
        <form method="post" class="form-group">
            <div class="form-group">
                <label asp-for="Username">Tên đăng nhập: </label>
                <input type="text" asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Mật khẩu: </label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label asp-for="Remember" class="form-check-label">
                    <input type="checkbox" asp-for="Remember" value="True" class="form-check-input" /> Ghi nhớ tài khoản
                </label>
            </div>
            <div class="d-flex mb-3">
                <button class="btn btn-primary mx-auto">Đăng nhập</button>
            </div>
            <div class="text-center">
                <p>Chưa có tài khoản? <a href="/auth/register" class="">Đăng kí thành viên</a> ngay</p>
            </div>
        </form>
    </div>
</div>