@model ResetPasswordModel
<div class="d-flex">
    <hr class="w-25 mb-4 mx-auto" />
</div>
<div class="container">
    <h4 class="text-center my-4">ĐẶT LẠI MẬT KHẨU</h4>   
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">           
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="NewPassword">Nhập mật khẩu mới: </label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="RePassword">Nhập lại mật khẩu mới: </label>
                    <input type="password" asp-for="RePassword" class="form-control" />
                </div>
                <div class="d-flex">
                    <button class="btn btn-primary mx-auto">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>