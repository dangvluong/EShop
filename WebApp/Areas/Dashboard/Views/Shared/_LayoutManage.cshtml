<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->

    <link href="~/css/bootstrap.css" rel="stylesheet" />

    <!-- jQuery library -->

    <script src="~/js/jquery-3.6.0.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/responsiveslides.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js"></script>
    <script src="/js/script.js" type="text/javascript"></script>
</head>

<body>
    <!--header start-->
    <div class="container-fluid" id="header-top">
        <div class="container">
            <div id="header-top-left" class="float-left">
                <ul>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                Xin chào
                                <a href="/member">
                                    @User.Identity.Name
                                </a>
                            </li>
                            @if (User.IsInRole("Staff") || User.IsInRole("Manager"))
                            {
                                <li>
                                    <a href="/dashboard">
                                        Trang quản lý
                                    </a>
                                </li>
                            }

                            <li>
                                <a href="/auth/logout">
                                    Đăng xuất
                                    <i class="fas fa-sign-out-alt"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="/auth/login">
                                    <span class="fas fa-user"></span>
                                    Đăng nhập
                                </a>
                            </li>
                            <li>
                                <a href="/auth/register">
                                    <span class="fas fa-lock"></span>
                                    Đăng kí thành viên
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <!--header end-->
    <!--logo & navbar start-->
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-light">
            <!-- Brand -->
            <a class="navbar-brand" href="/">
                <h1>
                    <span id="navbar-logo">E</span>
                    - Shop
                </h1>
            </a>
            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <div class="mx-auto">
                    <H4 class="text-center">TRANG QUẢN LÝ CỦA NHÂN VIÊN CỬA HÀNG</H4>
                </div>
            </div>
        </nav>
    </div>

    <div class="container-fluid">
        <div class="row products-page mt-5">
            <div class="col-3">
                <div class="products">
                    <div class="product-listy">
                        <h2>CHỌN CHỨC NĂNG</h2>
                        <ul class="product-list">
                            <li><a href="/dashboard">THỐNG KÊ DOANH THU</a></li>
                            <li><a href="/dashboard/product/">QUẢN LÝ SẢN PHẨM</a></li>
                            <li><a href="/dashboard/color/">QUẢN LÝ MÀU SẮC</a></li>
                            <li><a href="/dashboard/size/">QUẢN LÝ KÍCH CỠ</a></li>
                            <li><a href="/dashboard/guide/">QUẢN LÝ HƯỚNG DẪN SỬ DỤNG</a></li>
                            <li><a href="/dashboard/category/">QUẢN LÝ DANH MỤC</a></li>
                            <li><a href="/dashboard/invoice/">QUẢN LÝ HÓA ĐƠN</a></li>
                            @if (User.IsInRole("Manager"))
                            {
                                <li><a href="/dashboard/member/">QUẢN LÝ THÀNH VIÊN</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <!--features collection end-->
    <!--join mail list start-->
    <!--join mail list start end-->
    <!--List linke components start-->
    <div class="container" id="list-link-component">
        <div class="row">
            <div class="col-md-3">
                <h3>Shop</h3>
                <ul>
                    <li><a href="#">Men</a></li>
                    <li><a href="#">Women</a></li>
                    <li><a href="#">Boy</a></li>
                    <li><a href="#">Girl</a></li>
                    <li><a href="#">Sale</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h3>Help</h3>
                <ul>
                    <li><a href="#">New Arrivals</a></li>
                    <li><a href="#">Men</a></li>
                    <li><a href="#">Women</a></li>
                    <li><a href="#">Accessories</a></li>
                    <li><a href="#">Kids</a></li>
                    <li><a href="#">Brands</a></li>
                    <li><a href="#">Trends</a></li>
                    <li><a href="#">Sale</a></li>
                    <li><a href="#">Style Videos</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h3>Account</h3>
                <ul>
                    <li><a href="#">Login</a></li>
                    <li><a href="#">Register</a></li>
                    <li><a href="#">Forgot Password</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h3>Popular</h3>
                <ul>
                    <li><a href="#">New Arrivals</a></li>
                    <li><a href="#">Men</a></li>
                    <li><a href="#">Women</a></li>
                    <li><a href="#">Accessories</a></li>
                    <li><a href="#">Kids</a></li>
                    <li><a href="#">Brands</a></li>
                    <li><a href="#">Trends</a></li>
                    <li><a href="#">Sale</a></li>
                    <li><a href="#">Style Videos</a></li>
                </ul>
            </div>
        </div>
    </div>


    <!--List link components end-->
    <!--payment methods start-->
    <div class="container" id="payment-methods">
        <div>
            <img src="/images/icon/cards.jpg" alt="payment methods">
        </div>
    </div>
    <!--payment methods end-->
    <!--footer start-->
    <footer id="footer" class="container">
        <p>© 2015 Eshop. All Rights Reserved | Design by <a href="https://w3layouts.com">W3layouts</a></p>

    </footer>
    <!--footer end-->
    @RenderSection("script", required: false);
</body>
</html>