@model Product
<div class="form-group">
    <label asp-for="ProductName">Tên sản phẩm</label>
    <input type="text" asp-for="ProductName" class="form-control"/>
</div>
<div class="form-group">
    <label asp-for="Sku">Sku</label>
    <input type="text" asp-for="Sku" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Price">Giá</label>
    <input type="number" asp-for="Price" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="PriceSaleOff">Giá khuyến mãi</label>
    <input type="number" asp-for="PriceSaleOff" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Material">Chất liệu</label>
    <input type="text" asp-for="Material" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Description">Mô tả</label>
    <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
</div>