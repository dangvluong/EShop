@model Product

<div class="container">
    <form method="post" class="form-group">        
        <div class="form-group">
            <label asp-for="ProductName"></label>
            <input type="text" asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Sku"></label>
            <input type="text" asp-for="Sku" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PriceSaleOff"></label>
            <input type="number" asp-for="PriceSaleOff" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Material"></label>
            <input type="text" asp-for="Material" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label>Color</label>
            <div class="row">
                @foreach (var item in ViewBag.colors)
                {
                    <div class="col-2">
                        <label>
                            <input type="checkbox" name="listColor" />
                            @item.ColorCode
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <label>Size</label>
            <div class="row">
                @foreach (var item in ViewBag.sizes)
                {
                    <div class="col-1">
                        <label>
                            <input type="checkbox" name="listSize" value="@item.SizeId" />
                            @item.SizeCode
                        </label>
                    </div>
                }
            </div>
        </div>
        <div>
            <h5>Guide</h5>
            <div class="row">
                @foreach (var item in ViewBag.guides)
                {
                    <div class="col-6">
                        <label>
                            <input type="checkbox" name="listGuide" value="@item.GuideId" />
                            @item.GuideDescription
                        </label>
                    </div>
                }
            </div>
        </div>
        <div>
            <h5>Category</h5>
            <div class="row">
                @foreach (var item in ViewBag.categories)
                {
                    <div class="col-2">
                        <label>
                            <input type="checkbox" name="listCategory" value="@item.CategoryId" />
                            @item.CategoryName
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="d-flex mt-5">
            <button class="btn btn-primary mx-auto">Lưu</button>
        </div>
    </form>

</div>